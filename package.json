{
  "name": "okh-groups-map",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Mikael Arneborn <mikael@arneborn.net>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "log4js": "^6.3.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "webpack": "^5.36.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/google.maps": "^3.44.3",
    "@types/log4js": "^2.3.5",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-unicorn": "^31.0.0",
    "nodemon": "^2.0.7",
    "shellcheck": "^1.0.0",
    "webpack-cli": "^4.7.0",
    "yaml-lint": "^1.2.4"
  },
  "scripts": {
    "build:old": "./scripts/build.sh",
    "build": "webpack",
    "build:check": "tsc --noEmit",
    "lint": "ERROR_STATUS=0 ; yarn lint:js || ERROR_STATUS=$? ; yarn lint:yaml || ERROR_STATUS=$? ;  yarn lint:sh || ERROR_STATUS=$? ; echo \"=========\"; exit $ERROR_STATUS",
    "lint:js": "eslint . --ext .js,.jsh,.jsx,.ts,.tsx",
    "lint:js:fix": "yarn lint:js --fix",
    "lint:sh": "ERROR_STATUS=0 ; for file in $(find . -type f \\( -iname \"*.sh\" \\) -not -path './node_modules/*'); do yarn run shellcheck -x $file || ERROR_STATUS=$?; done; exit $ERROR_STATUS",
    "lint:yaml": "yamllint **/*.yml **/*.yaml --ignore=node_modules/**/*.yml --ignore=node_modules/**/*.yaml",
    "start": "node -r ts-node/register app/server/index.ts",
    "watch": "nodemon --watch 'app/**/*.ts' --ignore 'app/**/*.spec.ts' --exec 'ts-node' app/server/index.ts"
  }
}
